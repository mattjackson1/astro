---
interface Props {
	text: string;
}

const { text } = Astro.props;
---

<button class="inline-flex w-auto items-center gap-x-1 rounded-md bg-white hover:bg-gray-100 px-3 py-2 border border-gray-300 hover:border-gray-400 text-sm whitespace-nowrap font-medium text-gray-900 shadow-sm focus:ring-1 ring-inset ring-gray-300 hover:ring-gray-400 ease-in duration-200 disabled:opacity-50 disabled:cursor-not-allowed">{text}</button>
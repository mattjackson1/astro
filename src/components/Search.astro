---
import Button from '../components/Button.astro';
import searchIcon from '../assets/search-icon.svg?raw'; //import as a string
---

<div id="searchFilterForm" class="flex justify-between" >
    <div id="searchWizard" class="flex flex-col gap-3 mr-4">
        <div class="flex items-center gap-3">
            <select name="searchFilterForm:j_id39" class="px-3 py-2 border rounded enabled:hover:border-gray-400 disabled:opacity-75" size="1">
                <option value="org.jboss.seam.ui.NoSelectionConverter.noSelectionValue" selected="selected">Search all...</option>
                <option value="field:resource_type">Page type</option>
                <option value="field:title">Page title</option>
                <option value="field:familychannel">Search categories (Family)</option>
                <option value="field:searchable">Is this page searchable?</option>
                <option value="field:lo_age_bands">Local Offer age band</option>
                <option value="field:publication_date">Publication date</option>
                <option value="field:escbchannel">Search categories (ESCB)</option>
                <option value="field:localofferchannel">Search categories (Local Offer)</option>
                <option value="field:youthchannel">Search categories (Youth)</option>
                <option value="field:sharingportal_inbound">Syndicated from Portal</option>
                <option value="field:sharingportal_inbound_owner">Syndicated by</option>
                <option value="field:localofferchannelnew">Search categories (Local Offer new)</option>
                <option value="entrySource">Entry Source</option>
            </select>
            <div id="searchFilterForm:clausebuilder0">
                <label for="searchFilterForm:recordFilter_0" class="sr-only">Enter words to search for.</label>
                <input id="searchFilterForm:recordFilter_0" type="text" name="searchFilterForm:recordFilter_0" class="px-3 py-2 border rounded enabled:hover:border-gray-400 disabled:opacity-75" placeholder="Enter words to search for:">
            </div>    
            <p class="recordFilterButtons">
                <Button variant="secondary">
                    <span set:html={searchIcon} />
                    Search
                </Button>                
                <Button>Reset</Button>
            </p>
            <strong>Showing 329 records</strong>
        </div>

        <a href="#" class="hover:underline">+ new clause</a>
    </div>    
    
    <ul class="flex flex-col gap-2">
        <li><a href="#" id="searchFilterForm:j_id65" class="hover:underline">Switch to syntax</a></li>
        <li x-data="{ modalOpen: false }">
            <button @click="modalOpen = ! modalOpen" @click.outside="modalOpen = false">Jump to record</button>
            <template x-teleport="body">
                <div x-show="modalOpen" class="fixed inset-0 flex items-center justify-center z-50 ">
                    <!-- Overlay -->
                    <div class="fixed inset-0 bg-black opacity-50"></div>
                    <!-- Modal Dialog -->
                    <div class="bg-white rounded-lg p-6 max-w-md w-full z-10">
                        <div class="flex justify-between">
                            <h2 class="text-lg font-semibold mb-4">Jump To Record</h2>
                            <button class="rounded-full hover:bg-gray-300 bg-gray-100 mr-2">X</button>
                        </div>
                        <p class="text-gray-700 mb-4">Enter record external id:</p>
                        
                    </div>
                </div>
            </template>
        </li>
    </ul>        
        
</div>
    
---
interface Props {
    className?: string;
}

const { className = '' } = Astro.props as Props;
---

<button x-bind:disabled="!allSelected" class={`${className} inline-flex items-center gap-x-1 rounded-md px-3 py-2 text-sm whitespace-nowrap font-medium shadow-sm focus:ring-1 ring-inset ring-gray-300 hover:ring-gray-400 ease-in duration-200 disabled:opacity-50 disabled:cursor-not-allowed`}>
    <slot />
</button>
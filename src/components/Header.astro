---
import { Image } from 'astro:assets';
import logo from './idox_cube.png'; // logo === '/src/idox_cube.png';
const { product } = Astro.props;
---

<div class="flex items-center gap-3 ml-4 my-2">
    <Image src={logo} alt="Idox cube" width="50" height="50" loading="eager" />
    <span class="text-blue-500 font-semibold">{product}</span>
</div>
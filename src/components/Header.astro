---
import { Image } from 'astro:assets';
import logo from '../assets/idox_logo_white.png'; // logo === '/src/assets/idox_logo_white.png';
const { product } = Astro.props;
---

<nav id="nav" class="bg-cobalt text-white sticky top-0 w-full z-50">
    <div class="mx-auto max-w-none px-4 xl:px-6">
        <div class="relative flex h-16">
            <div id="head" class="flex flex-shrink-0 items-center max-xl:ml-8">
                <Image src={logo} alt="Idox plc" width="37" height="28" loading="eager" />
                <div class="block w-[1px] h-[35px] bg-white opacity-40 mx-4"></div>
                <span class="text-white tracking-tight">{product}</span>
            </div>

            <div id="links" class="hidden items-center ml-16 space-x-2 xl:flex ">
                <a class="text-gray-100 flex font-medium items-center hover:bg-cobalt-900 hover:text-white px-3 py-2 rounded-md text-sm" aria-current="page" href="#">

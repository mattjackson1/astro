---
import Layout from '../layouts/Layout.astro';
import Search from '../components/Search.astro';
import Button from '../components/Button.astro';
import Table from '../components/Table.astro';
import Card from '../components/Card.astro';
---

<Layout title="Directory V2">
	<main class="flex-1 xl:overflow-y-auto bg-slate-50">
		
		<div class="bg-white border-b border-gray-200 sticky top-0 z-10">
			<div class="lg:w-2/3 xl:w-full xl:px-8 lg:mx-auto p-4">
				<div class="flex items-center justify-between">
					<div class="min-w-0 flex-1">
						<h1 class="text-2xl font-semibold leading-7 text-gray-900 sm:truncate">DS4 Admin</h1>
					</div>
					<div class="flex items-center space-x-2">
						<Button variant="primary">
							Add a record
						</Button>
						<button class="flex w-auto items-center gap-x-1 rounded-md bg-white hover:bg-gray-100 px-3 py-2 border border-gray-300 hover:border-gray-400 text-sm whitespace-nowrap font-medium text-gray-900 shadow-sm focus:ring-1 ring-inset ring-gray-300 hover:ring-gray-400 ease-in duration-200 disabled:opacity-50 disabled:cursor-not-allowed" disabled="">
							Discard
						</button>
					</div>
				</div>
			</div>
		</div>
		
		<p class="p-3 border border-gray-200 rounded-lg bg-white shadow-sm m-5">
			To get started, fork this repo, then open the directory <code>src/pages</code> in your project.
		</p>

		<Search />

		<div class="flex flex-col space-y-6 p-4 m-0 mb-16 w-full sm:p-8 lg:mx-auto lg:w-2/3">
			<div class="divide-y divide-gray-200 overflow-hidden border border-gray-200 rounded-lg bg-white shadow-sm">
				<div class="bg-gray-50 px-5 py-4 flex flex-wrap items-center justify-between sm:flex-nowrap">
					<h2 class="text-md font-semibold leading-6 text-gray-900">Records</h2>
					<ul class="flex flex-wrap">
						<li class="px-3 py-1 hover:bg-cobalt hover:text-white ml-2 rounded-lg"><a href="">All (430)</a></li>
						<li class="px-3 py-1 bg-cobalt text-white ml-2 rounded-lg"><a href="">Live (330)</a></li>
						<li class="px-3 py-1 hover:bg-cobalt hover:text-white ml-2 rounded-lg"><a href="">Awaiting (0)</a></li>
						<li class="px-3 py-1 hover:bg-cobalt hover:text-white ml-2 rounded-lg"><a href="">Expired (0)</a></li>  
						<li class="px-3 py-1 hover:bg-cobalt hover:text-white ml-2 rounded-lg"><a href="">Invalid (0)</a></li>
						<li class="px-3 py-1 hover:bg-cobalt hover:text-white ml-2 rounded-lg"><a href="">Archive (100)</a></li>    
					</ul>
				</div>
				<div class="sm:flex justify-between sm:items-center">
					<div class="flex w-auto px-4 py-2 sm:mt-0 self-end sm:flex-none sm:ml-auto">
						<button class="flex w-auto items-center gap-x-1 rounded-md bg-white hover:bg-gray-100 px-3 py-2 border border-gray-300 hover:border-gray-400 text-sm whitespace-nowrap font-medium text-gray-900 shadow-sm focus:ring-1 ring-inset ring-gray-300 hover:ring-gray-400 ease-in duration-200 disabled:opacity-50 disabled:cursor-not-allowed">
							Enable all
						</button>
					</div>
				</div>
				<div class="overflow-x-auto">
					<div class="inline-block min-w-full align-middle">
						<Table />
					</div>
				</div>
			</div>

			<ul role="list">
				<Card
					href="https://docs.astro.build/"
					title="Documentation"
					body="Learn how Astro works and explore the official API docs."
				/>
				<Card
					href="https://astro.build/integrations/"
					title="Integrations"
					body="Supercharge your project with new frameworks and libraries."
				/>
			</ul>

		</div>
	</main>
</Layout>

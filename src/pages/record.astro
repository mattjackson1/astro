import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Button from '../components/Button.astro';
---

<Layout title="Directory V2">
	<div class="flex flex-1 xl:overflow-hidden">
		<div aria-label="Sections" class="hidden xl:flex flex-col w-72 flex-shrink-0 border-r border-gray-200 bg-white">
			<div class="min-h-0 flex-1 overflow-y-auto px-4 space-y-2 pt-2 pb-8 mb-8">
			<Nav />
			</div>
		</div>


		<main class="flex-1 xl:overflow-y-auto bg-slate-50">
			
			<div class="bg-white border-b border-gray-200 sticky top-0 z-10">
				<div class="lg:w-2/3 xl:w-full xl:px-8 lg:mx-auto p-4">
					<div class="flex items-center justify-between">
						<div class="min-w-0 flex-1">
							<h1 class="text-2xl font-semibold leading-7 text-gray-900 sm:truncate">DS4 Admin</h1>
						</div>
					</div>
				</div>
			</div>
			
			<div class="flex flex-col space-y-6 p-4 m-0 mb-16 w-full sm:p-8 lg:mx-auto lg:w-2/3">

				<div class="divide-y divide-gray-200 overflow-hidden border border-gray-200 rounded-lg bg-white shadow-sm">
					<div class="bg-gray-50 px-5 py-4">
						<div class="flex flex-wrap items-center justify-between">
							<h2 class="text-md font-semibold leading-6 text-gray-900">Status:Live</h2>
							<span> Source:Migrated Record </span>
						</div>
						<div class="flex flex-wrap items-center justify-between">
							
							<span class="block"> Last admin update:31/01/2024 by: merry.collins@redbridge.gov.uk </span>
							<span class="block"> Created on: 18/03/2016 External Id: 8S_qBNxvmBI </span>
				
							<div class="formControls flex gap-3">
								<input type="submit" class="bg-white hover:bg-gray-100 border border-gray-300 hover:border-gray-400 text-gray-900  inline-flex items-center gap-x-1 rounded-md px-3 py-2 text-sm whitespace-nowrap font-medium shadow-sm focus:ring-1 ring-inset ring-gray-300 hover:ring-gray-400 ease-in duration-200 disabled:opacity-50 disabled:cursor-not-allowed" name="recordform:j_id163" value="Update Record">
								<input type="submit" class="bg-white hover:bg-gray-100 border border-gray-300 hover:border-gray-400 text-gray-900  inline-flex items-center gap-x-1 rounded-md px-3 py-2 text-sm whitespace-nowrap font-medium shadow-sm focus:ring-1 ring-inset ring-gray-300 hover:ring-gray-400 ease-in duration-200 disabled:opacity-50 disabled:cursor-not-allowed" name="recordform:j_id168" value="Move to Archive">
								<input type="submit" class="bg-white hover:bg-gray-100 border border-gray-300 hover:border-gray-400 text-gray-900  inline-flex items-center gap-x-1 rounded-md px-3 py-2 text-sm whitespace-nowrap font-medium shadow-sm focus:ring-1 ring-inset ring-gray-300 hover:ring-gray-400 ease-in duration-200 disabled:opacity-50 disabled:cursor-not-allowed" name="recordform:j_id169" value="Delete">
								<input type="submit" class="bg-white hover:bg-gray-100 border border-gray-300 hover:border-gray-400 text-gray-900  inline-flex items-center gap-x-1 rounded-md px-3 py-2 text-sm whitespace-nowrap font-medium shadow-sm focus:ring-1 ring-inset ring-gray-300 hover:ring-gray-400 ease-in duration-200 disabled:opacity-50 disabled:cursor-not-allowed" name="recordform:j_id172" value="Clone to Drafts">
							</div>
							
							<ul class="modeTabs">
								<li class="hidden"><a href="#" id="recordform:j_id177" name="recordform:j_id177" onclick="A4J.AJAX.Submit('recordform',event,{'similarityGroupingId':'recordform:j_id177','oncomplete':function(request,event,data){attachEventHandlers()},'parameters':{'recordform:j_id177':'recordform:j_id177'} } );return false;">Showing record</a></li>
								<li class="underline"><a href="#" id="recordform:j_id186" name="recordform:j_id186" onclick="A4J.AJAX.Submit('recordform',event,{'similarityGroupingId':'recordform:j_id186','parameters':{'recordform:j_id186':'recordform:j_id186'} } );return false;">Show history</a></li>
							</ul>
							
							<ul class="flex flex-wrap items-center justify-between gap-1">
								<li><Button>&laquo;</Button></li>
								<li><Button>&lt;</Button></li>
								<li><span>3 of 5</span></li>
								<li><Button>&gt;</Button></li>
								<li><Button>&raquo;</Button></li>
							</ul>
						</div>					
					</div>

					<fieldset class="m-3">
						<legend class="">Select a Page Type</legend>
						<div id="recordform:j_id250" class="description mb-3">Please choose a page type. Once selected you will be able to specify content and settings appropriate for the selected page type.</div>
						<div id="recordform:layout_node_181789"><div id="recordform:_formRow_resource_type" class="flex gap-2 mb-3">
			<a class="formanchor" name="resource_type">&nbsp;</a>
			<label class="required font-semibold">
		Page type&nbsp;</label><div id="recordform:resource_type" class="inputWrapper typeinput"><div id="recordform:_resource_type_wrapper" class="widgetInput widgetInputNoScroll checkradio">
			
			<table id="recordform:_resource_type_checkRadio" class="w-full">
					<tbody class="flex"><tr class="inline">
						<td>
						<input type="radio" checked="checked" name="recordform:_resource_type_checkRadio" id="recordform:_resource_type_checkRadio:0" value="0" onchange="A4J.AJAX.Submit('recordform',event,{'similarityGroupingId':'recordform:j_id260','control':this,'oncomplete':function(request,event,data){attachEventHandlers()},'parameters':{'recordform:j_id260':'recordform:j_id260','ajaxSingle':'recordform:_resource_type_checkRadio'} } )"><label for="recordform:_resource_type_checkRadio:0"> Advice &amp; Guidance</label></td>
					</tr>
					<tr class="inline">
						<td>
						<input type="radio" name="recordform:_resource_type_checkRadio" id="recordform:_resource_type_checkRadio:1" value="1" onchange="A4J.AJAX.Submit('recordform',event,{'similarityGroupingId':'recordform:j_id260','control':this,'oncomplete':function(request,event,data){attachEventHandlers()},'parameters':{'recordform:j_id260':'recordform:j_id260','ajaxSingle':'recordform:_resource_type_checkRadio'} } )"><label for="recordform:_resource_type_checkRadio:1"> Site Page</label></td>
					</tr>
					<tr class="inline">
						<td>
						<input type="radio" name="recordform:_resource_type_checkRadio" id="recordform:_resource_type_checkRadio:2" value="2" onchange="A4J.AJAX.Submit('recordform',event,{'similarityGroupingId':'recordform:j_id260','control':this,'oncomplete':function(request,event,data){attachEventHandlers()},'parameters':{'recordform:j_id260':'recordform:j_id260','ajaxSingle':'recordform:_resource_type_checkRadio'} } )"><label for="recordform:_resource_type_checkRadio:2"> Category Page</label></td>
					</tr>
					<tr class="inline">
						<td>
						<input type="radio" name="recordform:_resource_type_checkRadio" id="recordform:_resource_type_checkRadio:3" value="3" onchange="A4J.AJAX.Submit('recordform',event,{'similarityGroupingId':'recordform:j_id260','control':this,'oncomplete':function(request,event,data){attachEventHandlers()},'parameters':{'recordform:j_id260':'recordform:j_id260','ajaxSingle':'recordform:_resource_type_checkRadio'} } )"><label for="recordform:_resource_type_checkRadio:3"> Page Fragment</label></td>
					</tr>
					<tr class="inline">
						<td>
						<input type="radio" name="recordform:_resource_type_checkRadio" id="recordform:_resource_type_checkRadio:4" value="4" onchange="A4J.AJAX.Submit('recordform',event,{'similarityGroupingId':'recordform:j_id260','control':this,'oncomplete':function(request,event,data){attachEventHandlers()},'parameters':{'recordform:j_id260':'recordform:j_id260','ajaxSingle':'recordform:_resource_type_checkRadio'} } )"><label for="recordform:_resource_type_checkRadio:4"> News Article</label></td>
					</tr>
					<tr class="inline">
						<td>
						<input type="radio" name="recordform:_resource_type_checkRadio" id="recordform:_resource_type_checkRadio:5" value="5" onchange="A4J.AJAX.Submit('recordform',event,{'similarityGroupingId':'recordform:j_id260','control':this,'oncomplete':function(request,event,data){attachEventHandlers()},'parameters':{'recordform:j_id260':'recordform:j_id260','ajaxSingle':'recordform:_resource_type_checkRadio'} } )"><label for="recordform:_resource_type_checkRadio:5"> Home Page</label></td>
					</tr>
				</tbody>
			</table>
			
			<div class="tooltipholder hidden">
				<span class="tooltip offscreen" data-for="recordform:_resource_type_checkRadio:0">Advice &amp; Guidance</span>
				<span class="offscreen tooltip" data-for="recordform:_resource_type_checkRadio:1">Site Page</span>
				<span class="tooltip offscreen" data-for="recordform:_resource_type_checkRadio:2">Category Page</span>
				<span class="tooltip offscreen" data-for="recordform:_resource_type_checkRadio:3">Page Fragment</span>
				<span class="offscreen tooltip" data-for="recordform:_resource_type_checkRadio:4">News Article</span>
				<span class="tooltip offscreen" data-for="recordform:_resource_type_checkRadio:5">Home Page</span>
			</div>
		</div>
		<div id="recordform:j_id269" class="flex"><a href="#" class="text-sm" id="recordform:j_id270" onclick="A4J.AJAX.Submit('recordform',event,{'similarityGroupingId':'recordform:j_id270','eventsQueue':'typeQueue','parameters':{'recordform:j_id270':'recordform:j_id270'} } );return false;">Clear</a></div><div id="recordform:j_id271" class="message"></div></div></div></div><div id="recordform:layout_node_181791"><div id="recordform:_formRow_title" class="flex gap-2 mb-3">
			<a class="formanchor" name="title">&nbsp;</a><label class="required font-semibold">
			Page title&nbsp;</label>
		
		<div class="inline w-full"><input id="recordform:title_0" type="text" name="recordform:title_0" value="Information for new or existing Personal Assistants" class="string">
			<div class="message"></div>
		</div></div></div>
					</fieldset>
				</div>

			</div>
		</main>
	</div>
</Layout>
